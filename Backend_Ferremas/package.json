{
  "name": "ferremas-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de gestión Ferremas",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo:all",
    "seed": "sequelize-cli db:seed:all",
    "docker:build": "docker build -t ferremas-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ferremas-backend",
    "docker:compose": "docker-compose up --build",
    "validate-env": "node scripts/validate-env.js",
    "features": "cucumber-js --require ./features/support --require ./features/step_definitions ./features",
    "features:single": "node scripts/ejecutar-feature.js",
    "features:forced": "node scripts/run-tests-forced.js",
    "features:report": "node scripts/generar-informe.js",
    "features:excel": "npm run features && npm run features:report",
    "install-chromedriver": "node ./scripts/install_chromedriver.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.7",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "sequelize": "^6.37.1",
    "transbank-sdk": "^6.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.2",
    "selenium-webdriver": "^4.11.3",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ferretería",
    "ecommerce",
    "inventario",
    "nodejs",
    "express",
    "sequelize"
  ],
  "author": "Tu Nombre <tu.email@ejemplo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/ferremas-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/ferremas-backend/issues"
  }
}
