# ============================================================================
# FERREMAS FRONTEND - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure according to your environment

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Environment: development, production, testing
DJANGO_ENVIRONMENT=development

# Django secret key (generate a new one for production!)
DJANGO_SECRET_KEY=django-insecure-t&!a#(a-++9kgj7-&5bozxh=n)3%@k!^t2dp%9q-d2k&87q#5(

# Debug mode (True/False)
DJANGO_DEBUG=True

# Allowed hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# For production MySQL database
DB_ENGINE=django.db.backends.mysql
DB_NAME=ferremas_frontend
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# ============================================================================
# BACKEND API SETTINGS
# ============================================================================

# Backend Node.js API URL
BACKEND_URL=http://localhost:3000

# API request timeout in seconds
BACKEND_API_TIMEOUT=10

# ============================================================================
# CACHE SETTINGS (PRODUCTION)
# ============================================================================

# Redis URL for production cache
REDIS_URL=redis://127.0.0.1:6379/1

# ============================================================================
# EMAIL SETTINGS (PRODUCTION)
# ============================================================================

# SMTP configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ferremas.cl

# ============================================================================
# SECURITY SETTINGS (PRODUCTION)
# ============================================================================

# Force HTTPS in production
FORCE_HTTPS=False

# Session timeout in seconds (3600 = 1 hour)
SESSION_TIMEOUT=3600

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (production)
LOG_FILE_PATH=/var/log/ferremas/django.log

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable Django Debug Toolbar (development only)
USE_DEBUG_TOOLBAR=True

# Enable Django Extensions (development only) 
USE_DJANGO_EXTENSIONS=True